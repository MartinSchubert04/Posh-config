{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "segments": [
        {
          "foreground": "#ffffe3",
          "style": "diamond",
          "template": "{{ round .PhysicalPercentUsed .Precision }}% ",
          "type": "sysinfo"
        },
        {
          "foreground": "#ffffe3",
          "style": "diamond",
          "template": "{{ (div ((sub .PhysicalTotalMemory .PhysicalAvailableMemory)|float64) 1073741824.0) }}/{{ (div .PhysicalTotalMemory 1073741824.0) }}GB ",
          "type": "sysinfo"
        }
      ],
      "type": "rprompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#ffffe3",
          "options": {
            "macos": "mac"
          },
          "style": "plain",
          "template": "ïŒ›\u2009",
          "type": "os"
        },
        {
          "foreground": "#ffffe3",
          "style": "plain",
          "template": "~",
          "type": "text"
        },
        {
          "foreground": "#ffffe3",
          "style": "plain",
          "template": "{{ .UserName }}:",
          "type": "session"
        },
        {
          "foreground": "#ab66fd",
          "options": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "style": "plain",
          "type": "path"
        },
        {
          "foreground": "#ab66fd",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#5A9CB5{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#91DDCF{{ end }}",
            "{{ if gt .Ahead 0 }}#A1BC98{{ end }}",
            "{{ if gt .Behind 0 }}#AF3E3E{{ end }}"
          ],
          "options": {
            "branch_template": "{{ trunc 25 .Branch }}",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": "<#ffffe3>on</> {{.UpstreamIcon }}  {{ .HEAD }} {{if .BranchStatus }}{{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "foreground": "#ffffe3",
          "style": "plain",
          "template": "\u276f ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 4
}
